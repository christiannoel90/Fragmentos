<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:name="arellano.christian.fragmentos.PrimerFragment"
            android:id="@+id/fragment"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            tools:layout="@layout/fragment_primer" android:layout_marginTop="8dp" android:layout_weight="1"/>
    <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:name="arellano.christian.fragmentos.SegundoFragment"
            android:id="@+id/fragment2"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp" android:layout_weight="1" tools:layout="@layout/fragment_segundo"/>
    <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:name="arellano.christian.fragmentos.TercerFragment"
            android:id="@+id/fragment3"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_weight="1" tools:layout="@layout/fragment_tercer"/>
</LinearLayout>